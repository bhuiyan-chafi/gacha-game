					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Validate request body and response based on status code\", function () {",
									"    const responseCode = pm.response.code;",
									"",
									"    // Define required properties",
									"    const requiredProperties = [\"username\", \"password\", \"status\"];",
									"",
									"    if (responseCode === 201) {",
									"        // Successful response, validate raw JSON in the request",
									"        const requestBody = JSON.parse(pm.request.body.raw);",
									"",
									"        // Check if all required properties are in the request",
									"        requiredProperties.forEach(function (property) {",
									"            pm.expect(requestBody).to.have.property(property, `Missing property: ${property}`);",
									"        });",
									"",
									"        // Validate response for success",
									"        const responseJson = pm.response.json();",
									"        pm.test(\"Response contains success detail message\", function () {",
									"            pm.expect(responseJson).to.have.property(\"detail\", \"User has been created successfully.\");",
									"        });",
									"    } else if (responseCode === 400) {",
									"        // Handle error response, e.g., missing fields or validation errors",
									"        const responseJson = pm.response.json();",
									"",
									"        requiredProperties.forEach(function (property) {",
									"            pm.test(`Error response indicates issues with field: ${property}`, function () {",
									"                if (responseJson[property]) {",
									"                    pm.expect(responseJson[property]).to.be.an(\"array\");",
									"                    pm.expect(responseJson[property][0]).to.match(/This field is required|must be unique|invalid/i);",
									"                }",
									"            });",
									"        });",
									"    } else {",
									"        pm.test(\"Unexpected response code\", function () {",
									"            pm.expect(responseCode).to.be.oneOf([201, 400], \"Response code is not as expected\");",
									"        });",
									"    }",
									"});"
								],
